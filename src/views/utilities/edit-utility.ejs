<%- include('../partials/header.ejs') %>

<% if(message) { %>
    <% if (message.length > 0)  { %>
        <div class="alert alert-success">
            <%= message %>
        </div>
    <% } %>
<% } %>

<h2 class="page-title">Edit a utility</h2>
<a href="/utilities/admin" class="btn btn-primary">Back to all utilities</a>
<br><br>

<form method="post" action="/utilities/admin/edit-utility/<%= id %>">
    <input type="hidden" class="form-control" name="id" value="<%= id %>" placeholder="Name">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="">Icon Url</label>
        <input type="text" class="form-control" name="iconUrl" value="<%= iconUrl %>" placeholder="Icon Url">
    </div>
    <div class="form-group">
        <label for="">Type</label>
        <input type="text" class="form-control" name="type" value="<%= type %>" placeholder="Type">
    </div>

   
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<%- include('../partials/footer.ejs') %>